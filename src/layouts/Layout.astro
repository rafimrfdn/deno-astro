import faviconapple from "../static/favicon/apple-touch-icon.png";
import manifest from "../static/favicon/site.webmanifest";

export interface Props {
  title: string;
  fotoOgImage: string;
  ogWeddingOf: string;
}

const { title, fotoOgImage, ogWeddingOf } = Astro.props;
