    <meta name="description" content="Dengan hormat, kami mengundang anda datang ke acara kami.">

    <link rel="apple-touch-icon" sizes="180x180" href={faviconapple}>
    <link rel="icon" type="image/png" sizes="32x32" href={favicon32}>
    <link rel="icon" type="image/png" sizes="16x16" href={favicon16}>
    <link rel="manifest" href={manifest}>

  <!-- Facebook Meta Tags -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={ogWeddingOf}>
  <meta property="og:description" content="Dengan hormat, kami mengundang anda datang ke acara kami.">
  <meta property="og:image" content={"https://resepsi.vercel.app/" + fotoOgImage}>

  <!-- Size of image. Any size up to 300. Anything above 300px will not work in WhatsApp -->
