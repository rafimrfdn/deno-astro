---
export interface Props {
    title: string;
    hariResepsi: string;
    tanggalResepsi: string;
    fotoBgWeddingof: string;
    fotoBg2: string;
    fotoBg3: string;
    fotoBg4: string;
    fotoBg5: string;
}

const { title, hariResepsi, tanggalResepsi, 
    fotoBgWeddingof,
    fotoBg2,
    fotoBg3,
    fotoBg4,
    fotoBg5,
} =
    Astro.props;
---

<section class="weddingof-section" >
    <div class="slider weddingof-photos">
        <img src={fotoBgWeddingof} class="slide weddingof-photo"/>
        <img src={fotoBg2}         class="slide weddingof-photo"/>
        <img src={fotoBg3}         class="slide weddingof-photo"/>
        <img src={fotoBg4}         class="slide weddingof-photo"/>
        <img src={fotoBg5}         class="slide weddingof-photo"/>
    </div>

    <div class="weddingof-text-section ">
        <div class="weddingof-text-wrapper">
            <!--<p class="text-small mb-3 uppercase">You Invited</p>-->
            <p class="wedding-text">You are Invited</p>
            <p class="wedding-text">Wedding of</p>
            <p class="font-hw wedding-text-couple ">{title}</p>
            <!--<a class="border-b p-4 font-bold animate-pulse text-white uppercase" href="https://calendar.google.com/calendar/event?action=TEMPLATE&tmeid=NWo3MnBlNmthMGthMzNwdWZza2lidnVhNDcgdXBoeS5ta3NAbQ&tmsrc=uphy.mks%40gmail.com" target="_blank">save the date</a>
            <!--<p class="mb-4">{hariResepsi}, {tanggalResepsi}</p>-->
        </div>
    </div>

    <div class="weddingof-text-date">
        <div class="wedding-text-wrapper md:text-end text-center md:w-full text-white">
        <!--     <a class="border-b p-4 font-bold animate-pulse text-white uppercase" href="https://calendar.google.com/calendar/event?action=TEMPLATE&tmeid=NmlyNjRjMGlxbGZxcmRlMjFtdjJoazcyM3EgdXBoeS5ta3NAbQ&tmsrc=uphy.mks%40gmail.com" target="_blank">save the date</a> -->
            <p class="wedding-text">{hariResepsi}, {tanggalResepsi}</p>
        </div>
    </div>

<!--    <div class="pb-24 text-white">
        <div class="flex justify-around md:w-1/4 mx-auto js-show-on-scroll ">
            <p class="font-mono md:text-5xl text-2xl" id="day"></p>
            <p class="font-mono md:text-5xl text-2xl" id="hour"></p>
            <p class="font-mono md:text-5xl text-2xl" id="minute"></p>
            <p class="font-mono md:text-5xl text-2xl" id="second"></p>
        </div>
    </div>-->
</section>


<style is:inline>
.slider .slide {
    top:0;
    bottom:0;
    animation: slider 12.5s infinite;
}

.slider .slide:nth-child(1) {
    animation-delay: 0s;

}

.slider .slide:nth-child(2) {
    animation-delay: -2.5s;
}

.slider .slide:nth-child(3) {
    animation-delay: -5s;
}

.slider .slide:nth-child(4) {
    animation-delay: -7.5s;
}

.slider .slide:nth-child(5) {
    animation-delay: -10s;
}

@keyframes slider {
0%, 16%, 100% {
    opacity: 1;
    animation-timing-function: ease;
    z-index: 0;
}
20% {
    opacity: 0;
    animation-timing-function: step-end;
    z-index: 0;
}
96% {
    opacity: 1;
    animation-timing-function: step-end;
    z-index: -1;
}
}

.weddingof-section{
    position: relative;
    background: #121212;
    background-attachment: fixed;
    width: 100%;
    display:flex;
    flex-direction:column;
    justify-content: space-between;
    z-index: 20;
}
.weddingof-photos{
    position: absolute;
    background-position: center;
    object-fit:cover;
    width: 100%;
    height: 100vh;
    opacity: 0.5;
}
.weddingof-photo{
    background-position: center;
    height: 100vh;
    width: 100%;
    object-fit:cover;
    position: absolute;
}
.weddingof-text-section{
    z-index: 50;
    padding-left: 1.5rem;
    padding-top: 6rem;

    @media (min-width: 768px) {
        padding-left: 6rem;
    }
}
.weddingof-text-wrapper{
    text-align:start;
    color: inherit;

    @media (min-width: 768px) {
        width: 100%;
    }
}
.wedding-text{
    font-size:.9em;
    text-transform: uppercase;
}
.wedding-text-couple{
    color: #121212;
    font-size: 2em;
    margin: 2em 0;

    @media (min-width: 1024px){
        font-size: 5em;
    }
}
.weddingof-text-date{
    z-index:50;
    bottom:0;
    padding-right:0;
    padding-bottom:6rem;
    
    @media (min-width: 768px) {
        padding-right: 5rem;
    }
}


</style>

<script is:inline>
// Set the date we're counting down to
var countDownDate = new Date("31 Dec, 2024 10:00:00").getTime();

// Update the count down every 1 second
var x = setInterval(function() {

  // Get today's date and time
  var now = new Date().getTime();
    
  // Find the distance between now and the count down date
  var distance = countDownDate - now;
    
  // Time calculations for days, hours, minutes and seconds
  var days = Math.floor(distance / (1000 * 60 * 60 * 24));
  var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
  var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
  var seconds = Math.floor((distance % (1000 * 60)) / 1000);
    
  // If the count down is over, write some text 
  if (distance < 0) {
  var days = Math.floor(distance / (1000 * 60 * 60 * 24) * 0);
  var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60) * 0);
  var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60) * 0);
  var seconds = Math.floor((distance % (1000 * 60)) / 1000 * 0);
    clearInterval(x);
//    document.getElementById("demo").innerHTML = "We Married";
  }

  // Output the result in an element with id="demo"
  document.getElementById("day").innerHTML = days + "<br/>" + "<p class='text-xs'>Days";
  document.getElementById("hour").innerHTML = hours + "<br/>" + "<p class='text-xs'>Hours";
  document.getElementById("minute").innerHTML = minutes + "<br/>" + "<p class='text-xs'>Minutes";
  document.getElementById("second").innerHTML = seconds + "<br/>" + "<p class='text-xs'>Seconds";
    
}, 1000);
</script>
