---
export interface Props {
  fotoCewe: string;
  namaCewe: string;
  namaLengkapCewe: string;
  ceweAdalah: string;
  namaAyahCewe: string;
  namaIbuCewe: string;
    fotoBg3: string;
    fotoBg4: string;
    fotoBg5: string;
    fotoBg6: string;
}

const {
  fotoCewe,
  namaCewe,
  namaLengkapCewe,
  ceweAdalah,
  namaAyahCewe,
  namaIbuCewe,
  fotoBg3,
  fotoBg4,
  fotoBg5,
  fotoBg6,
} = Astro.props;
---

<section
  class="relative mx-6 mb-24 flex md:justify-center md:flex-row flex-col items-center text-center snap-center bg-cover bg-center "
>
  
  <!--<img 
    src={fotoCewe}
    class="z-20 bg-center rounded shadow-2xl object-cover md:w-auto md:h-96 sm:w-2/3 w-full js-show-on-scroll  "
  />-->
    <div class="slider z-20 shadow-2xl object-cover h-96 h-32 md:w-96 w-full js-show-on-scroll relative mr-4">
        <img src={fotoCewe}        class="slide rounded-lg bg-center h-96 w-full object-cover absolute" />
        <img src={fotoBg6}         class="slide rounded-lg bg-center h-96 w-full object-cover absolute" />
        <img src={fotoBg3}         class="slide rounded-lg bg-center h-96 w-full object-cover absolute" />
        <img src={fotoBg5}         class="slide rounded-lg bg-center h-96 w-full object-cover absolute" />
        <img src={fotoBg4}         class="slide rounded-lg bg-center h-96 w-full object-cover absolute" />
    </div>
  <div
    class=" md:w-1/3 w-full md:h-full h-auto z-40 pt-4  md:text-xl md:mb-4 mb-10 js-show-on-scroll "
  >
    <!--<p class="text-6xl uppercase font-bold mb-3">{namaCewe}</p>-->
    <p class="lg:text-center text-start lg:text-5xl text-2xl uppercase font-serif font-black my-6">{namaLengkapCewe}</p>
    <div class="lg:text-center lg:mx-auto mx-start text-start my-10 ">
        <a href="https://www.instagram.com/a.dalaas" class="justify-center text-sm font-bold">@a.dalaas</a>
    </div>
    <p class="lg:text-center text-start mb-1">{ceweAdalah} dari :</p>
    <p class="lg:text-center text-start">
      <strong>{namaAyahCewe}</strong> dan <strong>{namaIbuCewe}</strong>
    </p>
  </div>
</section>

<style is:inline>
.slider .slide {
    top:0;
    bottom:0;
 animation: slider 12.5s infinite;
}
 
.slider .slide:nth-child(1) {
   animation-delay: 0s;
    
}

.slider .slide:nth-child(2) {
   animation-delay: -2.5s;
}

.slider .slide:nth-child(3) {
   animation-delay: -5s;
}

.slider .slide:nth-child(4) {
   animation-delay: -7.5s;
}

.slider .slide:nth-child(5) {
   animation-delay: -10s;
}

@keyframes slider {
  0%, 16%, 100% {
    opacity: 1;
    animation-timing-function: ease;
    z-index: 0;
  }
  20% {
    opacity: 0;
    animation-timing-function: step-end;
    z-index: 0;
  }
  96% {
    opacity: 1;
    animation-timing-function: step-end;
    z-index: -1;
  }
}

</style>
